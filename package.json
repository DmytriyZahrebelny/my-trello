{
  "name": "my-trello",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "check:format": "prettier --check ./apps/**/*.{ts,json}",
    "format": "prettier --write ./apps/**/*.{ts,tsx,json}",
    "ui-react": "pnpm --filter ui-react run start",
    "docker:api-express": "docker-compose up api_dev",
    "api-express": "pnpm --filter api-express run start:dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "typescript": "5.0.0-beta"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "env": {
      "node": true,
      "es2021": true
    },
    "rules": {
      "no-console": 1,
      "prettier/prettier": 2,
      "no-useless-escape": 0,
      "no-use-before-define": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  }
}
