{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
    "lib": ["ESNext", "dom"],
    "baseUrl": ".",
    "jsxImportSource": "@emotion/react",
    "jsx": "react-jsx",
    "paths": {
      "@views/*": ["src/views/*"],
      "@api/*": ["src/api/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@store/*": ["src/store/*"],
      "@services/*": ["src/services/*"],
      "@providers/*": ["src/providers/*"],
      "@router": ["src/router"]
    }
  },
  "include": ["src/**/*", "vite.config.ts"]
}
