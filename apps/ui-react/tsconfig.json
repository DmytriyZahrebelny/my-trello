{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "jsxImportSource": "@emotion/react",
    "jsx": "react-jsx",
    "paths": {
      "@core/*": ["src/core/*"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "build", "**/*.test.ts?(x)"]
}
