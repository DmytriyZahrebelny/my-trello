{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
    "lib": ["ESNext", "dom"],
    "baseUrl": ".",
    "jsxImportSource": "@emotion/react",
    "jsx": "react-jsx",
    "paths": {
      "@core/*": ["src/core/*"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts"]
}
