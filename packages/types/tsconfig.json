{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "dom"],
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
