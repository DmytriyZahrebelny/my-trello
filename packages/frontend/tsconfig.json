{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@core/*": ["src/core/*"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "dist", "**/*.test.ts?(x)"]
}
