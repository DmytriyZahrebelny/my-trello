{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true
  },
  "exclude": ["node_modules", "build", "**/*.test.ts?(x)"]
}
