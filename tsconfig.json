{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true
  },
  "references": [
    {
      "path": "./apps/api-express"
    },
    {
      "path": "./apps/packages/ui-react"
    }
  ],
  "exclude": ["node_modules", "build", "**/*.test.ts?(x)"]
}
